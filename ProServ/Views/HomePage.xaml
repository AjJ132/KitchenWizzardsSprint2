<Page x:Class="ProServ.Views.HomePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:ProServ.Views"
	xmlns:models="clr-namespace:ProServ.models" 
      Title="HomePage"
       mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920">
    <Page.Resources>
        <local:ItemsToStringConverter x:Key="ItemsToStringConverter" />
    </Page.Resources>
    <Grid Background="#454545" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="0.6*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.3*" />
        </Grid.RowDefinitions>
        <!-- Customer Tab -->
        <Grid Grid.Column="0"
              Grid.Row="0"
              Grid.RowSpan="2"
              Background="Black"
              >
            <Grid.RowDefinitions>
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.4*" />
                <RowDefinition Height="0.2*" />
                <RowDefinition Height="0.2*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>
            
            
            <StackPanel Grid.ColumnSpan="2"
                        Orientation="Vertical"
                        Grid.Row="0">
                <Button Content="Log-Out" 
                        Height="90"
                        Width="300"
                        FontSize="60"
                        Click="Log_Out_Click"/>
               
                <Label FontSize="40" 
                       Foreground="White"
                       HorizontalContentAlignment="Left">
                    <TextBlock >
                        Tab ID:  
						<Run Text="{Binding selectedCustomerTab.tabId}" />
                    </TextBlock>
                </Label>
                <Label Foreground="White"
                    FontSize="40" HorizontalContentAlignment="Left">
                    <TextBlock >
                        Table ID:  
						<Run Text="{Binding selectedCustomerTab.tableId}" />
                    </TextBlock>
                </Label>
                
            </StackPanel>
            
            <ListBox ItemsSource="{Binding selectedCustomerTab.items}" 
                     Grid.Row="1"
                     Background="Black"
                     HorizontalAlignment="Stretch"
                     Width="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                    >
                            <Label Foreground="White"
                                FontSize="30" HorizontalContentAlignment="Center">
                                <TextBlock >
									<Run Text="{Binding itemName}" />
                                </TextBlock>
                            </Label>
                            <Label Foreground="White"
                                FontSize="30">
                                <TextBlock >
									<Run Text="{Binding itemPrice}" />
                                </TextBlock>
                            </Label>
                            <StackPanel.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Delete" Click="MenuItem_Delete_Click" />
                                </ContextMenu>
                            </StackPanel.ContextMenu>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Label FontSize="40" HorizontalContentAlignment="Left"
                   Grid.Row="2"
                   Foreground="White">
                <TextBlock >
                        Total:  
						<Run Text="{Binding selectedCustomerTab.TabTotal}" />
                </TextBlock>
            </Label>


            <Grid Grid.Row="3"
               Grid.ColumnSpan="2">
                <Button 
                    Content="Check Out"
                    FontSize="64"
                    Width="300"
                    Height="150"
                    Click="CheckOutButton_Click"/>
            </Grid>


           
        </Grid>
        <!-- Tables -->
        <Grid Grid.Column="1"
              Grid.ColumnSpan="2"
              Grid.Row="0"
              Background="Black"
              x:Name="TableGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
        <!--Menu Section-->
        <Grid Grid.Column="1"
              Grid.Row="1"
              x:Name="MenuGrid"
              Background="Black">
            <TabControl FontSize="24"
                        Background="Black">

                <TabItem Header="Appetizers"
         BorderThickness="0">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Appetizers}"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                            BorderThickness="1"
                            Margin="5"
                            Padding="5"
                            CornerRadius="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.8*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                   Width="Auto"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   Stretch="Uniform">
                                                <Image.Source>
                                                    <BitmapImage UriSource="{Binding imagePath}" />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Grid.Row="1"
                                       Text="{Binding itemName}" 
                                       FontSize="40"
                                       HorizontalAlignment="Center"
                                                       Foreground="White"/>
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Add to tab" 
                                              Click="MenuItem_AddToTab"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Salads">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Salads}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            Margin="5"
                                            Padding="5"
                                    CornerRadius="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.8*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                   Width="Auto"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   Stretch="Uniform">
                                                <Image.Source>
                                                    <BitmapImage UriSource="{Binding imagePath}" />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Grid.Row="1"
                                       Text="{Binding itemName}" 
                                       FontSize="40"
                                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Add to tab" 
                                              Click="MenuItem_AddToTab"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Entrees">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Entrees}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            Margin="5"
                                            Padding="5"
                                    CornerRadius="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.8*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                   Width="Auto"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   Stretch="Uniform">
                                                <Image.Source>
                                                    <BitmapImage UriSource="{Binding imagePath}" />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Grid.Row="1"
                                       Text="{Binding itemName}" 
                                       FontSize="40"
                                       HorizontalAlignment="Center"
                                                       Foreground="White"/>
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Add to tab" 
                                              Click="MenuItem_AddToTab"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Sides">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Sides}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            Margin="5"
                                            Padding="5"
                                    CornerRadius="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.8*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                   Width="Auto"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   Stretch="Uniform">
                                                <Image.Source>
                                                    <BitmapImage UriSource="{Binding imagePath}" />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Grid.Row="1"
                                       Text="{Binding itemName}" 
                                       FontSize="40"
                                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Add to tab" 
                                              Click="MenuItem_AddToTab"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Sandwiches">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Sandwiches}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            Margin="5"
                                            Padding="5"
                                    CornerRadius="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.8*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                   Width="Auto"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   Stretch="Uniform">
                                                <Image.Source>
                                                    <BitmapImage UriSource="{Binding imagePath}" />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Grid.Row="1"
                                       Text="{Binding itemName}" 
                                       FontSize="40"
                                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Add to tab" 
                                              Click="MenuItem_AddToTab"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Wraps">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Wraps}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            Margin="5"
                                            Padding="5"
                                    CornerRadius="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.8*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                   Width="Auto"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   Stretch="Uniform">
                                                <Image.Source>
                                                    <BitmapImage UriSource="{Binding imagePath}" />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Grid.Row="1"
                                       Text="{Binding itemName}" 
                                       FontSize="40"
                                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Add to tab" 
                                              Click="MenuItem_AddToTab"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Burgers">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                    VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Burgers}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black"
                                            BorderThickness="1"
                                            Margin="5"
                                            Padding="5"
                                    CornerRadius="20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0.8*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Image Grid.Row="0"
                                   Width="Auto"
                                   MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Grid}}"
                                   Stretch="Uniform">
                                                <Image.Source>
                                                    <BitmapImage UriSource="{Binding imagePath}" />
                                                </Image.Source>
                                            </Image>
                                            <TextBlock Grid.Row="1"
                                       Text="{Binding itemName}" 
                                       FontSize="40"
                                                       Foreground="White"
                                       HorizontalAlignment="Center"/>
                                            <Grid.ContextMenu>
                                                <ContextMenu>
                                                    <MenuItem Header="Add to tab" 
                                              Click="MenuItem_AddToTab"/>
                                                </ContextMenu>
                                            </Grid.ContextMenu>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Beverages"></TabItem>
            </TabControl>
        </Grid>
        
        <!--Order Que-->
        <Grid Grid.Row="2" Grid.Column="2"
              Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height=".2*" />
                <RowDefinition Height=".8*" />
            </Grid.RowDefinitions>
            
            <Label Content="Order Que" 
                   FontSize="64"
                   Grid.Row="0"
                   Margin="0,0,0,0"
                   Padding="0"
                   HorizontalAlignment="Center"/>
            

            <ListView Grid.Row="1"
                ItemsSource="{Binding OrderQueue.QueuedItems}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu DataContext="{Binding RelativeSource={RelativeSource Self}, Path=PlacementTarget.DataContext}">
                                    <MenuItem Header="Move to Top" Click="MoveToTop_Click" />
                                    <MenuItem Header="Move to Bottom" Click="MoveToBottom_Click" />
                                    <MenuItem Header="Remove from Queue" Click="RemoveFromQueue_Click" />
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ItemName}" Grid.Column="0" Margin="5" FontWeight="Bold" FontSize="14" />
                            <TextBlock Grid.Column="1" Margin="5" FontWeight="Bold" FontSize="14">
                                <Run Text="Table:" />
                                <Run Text="{Binding TableId}" />    
                            </TextBlock>
                            <TextBlock Grid.Column="2" Margin="5" FontWeight="Bold" FontSize="14" >
                                <Run Text="Time Inserted: " />
                                <Run Text="{Binding TimeInserted, StringFormat='{}{0:t}'}" />
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>



    </Grid>
</Page>
